{
  "name": "solidity",
  "version": "1.0.0",
  "license": "MIT",
  "private": true,
  "scripts": {
    "compile": "hardhat compile",
    "typechain": "npx hardhat --config hardhat.config.ts typechain",
    "deploy:localhost": "hardhat run ./scripts/deploy.ts --network localhost",
    "deploy:goerli:Claim": "hardhat run ./scripts/claim.ts --network goerli",
    "deploy:goerli:MockERC20": "hardhat run ./scripts/mock-erc20.ts --network goerli",
    "deploy:goerli:Clock": "hardhat run ./scripts/deploy.ts --network goerli",
    "deploy:ogoerli:Claim": "hardhat run ./scripts/claim.ts --network ogoerli",
    "deploy:ogoerli:MockERC20": "hardhat run ./scripts/mock-erc20.ts --network ogoerli",
    "deploy:pgoerli:Clock": "hardhat run ./scripts/deploy.ts --network ogoerli",
    "verify:goerli:Claim": "npx hardhat verify 0xcFe1F59ecE8E223e6b270Dddc297407C61d2b47e --network goerli",
    "verify:goerli:MockERC20": "npx hardhat verify 0xcFe1F59ecE8E223e6b270Dddc297407C61d2b47e --network goerli  --constructor-args ./scripts/mock-erc20-arguments.ts",
    "verify:goerli:Lock": "npx hardhat verify 0xcFe1F59ecE8E223e6b270Dddc297407C61d2b47e --network goerli --constructor-args ./scripts/lock-arguments.ts",
    "verify:ogoerli:Claim": "npx hardhat verify 0x71f67046625806ca5f722220D38adb8C78534574 --network ogoerli",
    "verify:ogoerli:MockERC20": "npx hardhat verify 0x8e478fFE7F54F095eeEc60DF703dc52F73cE9f2c --network ogoerli  --constructor-args ./scripts/mock-erc20-arguments.ts",
    "test": "hardhat test --network localhost",
    "start": "npx hardhat node",
    "clean": "npx hardhat clean"
  },
  "devDependencies": {
    "@ethersproject/abi": "^5.7.0",
    "@nomicfoundation/hardhat-chai-matchers": "^1.0.6",
    "@nomicfoundation/hardhat-network-helpers": "^1.0.8",
    "@nomicfoundation/hardhat-toolbox": "^2.0.2",
    "@nomiclabs/hardhat-ethers": "^2.2.3",
    "@nomiclabs/hardhat-etherscan": "^3.1.7",
    "@openzeppelin/contracts": "^4.8.3",
    "@typechain/ethers-v5": "^10.2.1",
    "@typechain/hardhat": "^6.1.6",
    "@types/mocha": "^10.0.1",
    "chai": "^4.2.0",
    "dotenv": "^16.0.3",
    "hardhat": "^2.14.0",
    "hardhat-gas-reporter": "^1.0.9",
    "solidity-coverage": "^0.8.2",
    "ts-node": "^10.9.1",
    "typechain": "^8.1.1",
    "typescript": "^5.0.4"
  }
}
